{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "@dcloudio/types",
      "@uni-helper/uni-types",
      "@types/wechat-miniprogram",
      "wot-design-uni/global.d.ts",
      "z-paging/types",
      "./src/typings.d.ts",
      "node"
    ],
    "allowJs": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "vueCompilerOptions": {
    "plugins": ["@uni-helper/uni-types/volar-plugin"]
  },
  "exclude": [
    "node_modules",
    "src/uni_modules",
    "dist"
  ]
}
